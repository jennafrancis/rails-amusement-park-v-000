<%= form_for @user do |f| %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div><br>

<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div><br>

<div class="field">
  <%= f.label 'Height (in inches)' %><br>
  <%= f.number_field :height %>
</div><br>

<div class="field">
  <%= f.label 'How happy are you? (1-5 scale)' %><br>
  <%= f.number_field :happiness %>
</div><br>

<div class="field">
  <%= f.label 'How nauseous are you? (1-5 scale)' %><br>
  <%= f.number_field :nausea %>
</div><br>

<div class="field">
  <%= f.label 'How many dollars are in your pocket?' %><br>
  <%= f.number_field :tickets %>
</div><br>

<div class="field">
  <%= f.label 'Check box if you are a theme park owner' %>
  <%= f.check_box :admin %>
</div><br>

<%= f.submit %>
<% end %><br>
